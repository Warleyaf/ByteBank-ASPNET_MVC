@model List<ContasModel>

@{
    ViewData["Title"] = "Listar Contas";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="ListarContas" asp-action="Criar"> <!--Esse asp-controller é para criar o link para minha página de criar novo usuário-->
            Inserir novo usuário
        </a>
    </div>

    <h1 class="display-4">Listagem de Usuários</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">CPF</th>
                <th scope="col">Titular</th>
                <th scope="col">Saldo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any()) {

                foreach (ContasModel contas in Model) {
                    <tr>
                        <th scope="row">@contas.Id</th>
                        <td>@contas.Cpf</td>
                        <td>@contas.Titular</td>
                        <td>R$ @contas.Saldo.ToString("F2")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@contas.Id" asp-controller="ListarContas" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@contas.Id" asp-controller="ListarContas" asp-action="ApagarConfirmacao">Exluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>


</div>
