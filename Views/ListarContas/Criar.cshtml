@model ContasModel

@{
    ViewData["Title"] = "Criar Usuário";
}

<div class="text-center">

    <h1 class="display-4">Cadastro de Usuário</h1>

</div>

<form asp-controller="ListarContas" asp-action="Criar" method="post">
  <div class="form-group">
    <label for="cpf">CPF</label>
    <input type="text" asp-for="Cpf" class="form-control" placeholder="Digite o CPF">
  </div>

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Titular" class="form-control" placeholder="Digite o seu nome">
    </div>

    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Coloque uma senha">
    </div>

    <div class="form-group">
        <label for="saldo">Saldo $</label>
        <input type="number" asp-for="Saldo" class="form-control" placeholder="Coloque o Saldo">
    </div>
    <br />
  <button type="submit" class="btn btn-primary">Adicionar</button>
  <a class="btn btn-secondary" asp-controller = "ListarContas" asp-action="Index" role="button">Voltar</a>
</form>
