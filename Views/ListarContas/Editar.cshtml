@model ContasModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">

    <h1 class="display-4">Editar Usuário</h1>

</div>

<form asp-controller="ListarContas" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text" asp-for="Cpf" class="form-control" placeholder="Digite o CPF">
    </div>

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Titular"  class="form-control" placeholder="Digite o seu nome">
    </div>

    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Coloque uma senha">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="ListarContas" asp-action="Index" role="button">Voltar</a>
</form>