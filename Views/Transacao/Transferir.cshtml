@{
    ViewData["Title"] = "Transferir Dinheiro";
}

<div class="text-center">

    <h1 class="display-4">Transferir Dinheiro</h1>

</div>

<form>

    <div class="form-group">
        <label for="cpf"> <h5>CPF</h5> </label>
        <input type="string" class="form-control" placeholder="R$">
    </div>

    <div class="form-group">
        <label for="deposito"> <h5>Quantidade a ser transferido R$</h5> </label>
        <input type="number" class="form-control" placeholder="R$">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Confirmar</button>
    <a class="btn btn-secondary" asp-controller="Transacao" asp-action="Index" role="button">Voltar</a>
</form>